<?xml version="1.0" encoding="utf-8"?>
<!-- Used for larger layouts, ie tablets -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <fragment android:name="se.antonnyman.solarsystem.PlanetFragment"
        android:id="@+id/planet_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    
    <fragment android:name="se.antonnyman.solarsystem.PlanetListFragment"
        android:id="@+id/planet_list_fragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>
